<h4>Todo</h4>


{{#if: error}}
<div class="alert alert-danger">
  {{ error.message }}
</div>
{{/}}

{{ remaining }} of {{ total }} remaining [ <a href="#" data-bind="{{ onClick: archive() }}">archive</a> ]

<ul style="list-style-type: none; padding: 0px;">
  {{ html: sections.todos }}
</ul>


<form data-bind="{{ onSubmit: addTodo() }}">
  <input type="input" placeholder="add new todo here" name="text" data-bind="{{ model: this }}"></input>
  <input type="submit" value="add"></input>
</form>